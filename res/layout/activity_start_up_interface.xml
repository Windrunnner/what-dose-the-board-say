<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wtdbs5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartUpInterfaceActivity" >

    <TextView
        android:id="@+id/start_up_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/start_create_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="128dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/start_create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="146dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/selfbuttona"
        android:onClick="toCreate"
        android:shadowColor="#182B36"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="Create New"
        android:textColor="#0C1A70"
        android:textSize="25sp" />

    <Button
        android:id="@+id/start_join_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/start_create_button"
        android:layout_below="@+id/start_create_button"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/selfbuttona"
        android:onClick="toJoin"
        android:shadowColor="#182B36"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="Join a Board"
        android:textColor="#0C1A70"
        android:textSize="25sp" />

</RelativeLayout>